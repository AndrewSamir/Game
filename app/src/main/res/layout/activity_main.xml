<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:weightSum="3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="0dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="1"
            android:id="@+id/B1"
            android:textSize="@dimen/size"
            android:textColor="#ffffff"

            android:layout_height="fill_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="@dimen/size"
            android:id="@+id/B2"
            android:textColor="#ffffff"

            android:background="#000"
            android:layout_height="fill_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="@dimen/size"
            android:id="@+id/B3"

            android:textColor="#ffffff"

            android:background="#000"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:weightSum="3"

        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="@dimen/size"
            android:id="@+id/B4"
            android:textColor="#ffffff"

            android:background="#000"
            android:layout_height="fill_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="5"
            android:textSize="@dimen/size"
            android:id="@+id/B5"
            android:textColor="#ffffff"

            android:layout_height="fill_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="6"
            android:textSize="@dimen/size"
            android:id="@+id/B6"
            android:textColor="#ffffff"

            android:layout_height="fill_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:weightSum="3"

        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="7"
            android:textSize="@dimen/size"
            android:textColor="#ffffff"

            android:id="@+id/B7"

            android:layout_height="fill_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:textColor="#ffffff"
            android:text="8"
            android:textSize="@dimen/size"
            android:id="@+id/B8"

            android:layout_height="fill_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="@dimen/size"
            android:id="@+id/B9"
            android:textColor="#ffffff"
android:background="#000"
            android:layout_height="fill_parent" />
    </LinearLayout>

    </LinearLayout>
